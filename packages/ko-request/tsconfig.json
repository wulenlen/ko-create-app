{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ESNext",                        
    "module": "ESNext",                     
    "lib": ["ESNext", "DOM"], 
    "allowJs": false,                
    "declaration": true,                        
    "moduleResolution": "node",
    "esModuleInterop": true,              
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true,
  },
  "exclude": [
    "node_modules"
  ]
}
